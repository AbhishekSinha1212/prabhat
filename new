
CREATE TABLE CUSTOMER
(
	customer_address TEXT,
	customer_city TEXT,
	customer_first_name TEXT,
	customer_last_name TEXT,
	customer_state TEXT,
	customer_zip_code INT,
	email TEXT,
	customer_number INT,
	PRIMARY KEY((customer_number))
);

CREATE TABLE CUSTOMER_CREDIT
(
	credit_card INT,
	credit_card_exp INT,
	status_code TEXT,
	customer_number INT,
	PRIMARY KEY((customer_number))
);

CREATE TABLE EMPLOYEE
(
	employee_first_name TEXT,
	employee_address TEXT,
	employee_phone INT,
	store_number INT,
	employee_address_2 TEXT,
	email TEXT,
	salary INT,
	hire_date DATE,
	soc_sec_number INT,
	employee_number TEXT,
	supervisor TEXT,
	PRIMARY KEY((employee_number))
);

CREATE TABLE MOVIE
(
	movie_title TEXT,
	movie_director TEXT,
	description TEXT,
	star_1_name TEXT,
	rating TEXT,
	star_2_name TEXT,
	movie_number INT,
	genre TEXT,
	rental_rate DECIMAL,
	movie_url TEXT,
	movie_clip BLOB,
	PRIMARY KEY((movie_number))
);

CREATE TABLE MOVIE_COPY
(
	general_condition TEXT,
	movie_format TEXT,
	movie_copy_number INT,
	movie_number INT,
	PRIMARY KEY((movie_copy_number,movie_number))
);

CREATE TABLE MOVIE_RENTAL_RECORD
(
	rental_date DATE,
	due_date DATE,
	rental_status TEXT,
	payment_transaction_number INT,
	overdue_charge INT,
	rental_rate INT,
	employee_phone INT,
	soc_sec_number INT,
	rental_record_date DATE,
	movie_copy_number INT,
	movie_number INT,
	customer_number INT,
	PRIMARY KEY((rental_record_date,soc_sec_number,employee_phone,movie_copy_number,movie_number,customer_number,customer_number))
);

CREATE TABLE MOVIE_STORE
(
	movie_number INT,
	store_number INT,
	PRIMARY KEY((movie_number,store_number))
);

CREATE TABLE PAYMENT
(
	payment_transaction_number INT,
	payment_type TEXT,
	payment_amount DECIMAL,
	payment_date DATE,
	payment_status TEXT,
	employee_number TEXT,
	customer_number INT,
	customer_no INT,
	check_bank_number INT,
	check_number INT,
	epay_vendor_number INT,
	epay_account_number INT,
	credit_card_number TEXT,
	credit_card_exp TIMESTAMP,
	credit_card_type TEXT,
	PRIMARY KEY((payment_transaction_number))
);

CREATE TABLE STORE
(
	store_manager TEXT,
	store_address TEXT,
	store_address_2 TEXT,
	store_phone INT,
	store_city TEXT,
	store_state TEXT,
	store_zip_code INT,
	store_number INT,
	PRIMARY KEY((store_number))
);

CREATE INDEX XIE1CUSTOMER ON CUSTOMER ( customer_last_name );

CREATE INDEX XIE1EMPLOYEE ON EMPLOYEE ( employee_first_name );

CREATE INDEX XIE1STORE ON STORE ( store_manager );
